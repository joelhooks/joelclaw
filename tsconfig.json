{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "noCheck": true
  },
  "include": [
    "docs/__tests__/**/*.ts",
    "packages/cli/src/**/*.ts",
    "packages/cli/__tests__/**/*.ts"
  ],
  "exclude": ["node_modules", "apps"]
}
