{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "style": {
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {},
            "patterns": [
              {
                "group": [
                  "./observability",
                  "../observability",
                  "../../observability",
                  "../../../observability"
                ],
                "message": "DO NOT BYPASS. Import from @joelclaw/telemetry instead — it is the single canonical telemetry interface (ADR-0144). Fix the import, do not suppress."
              },
              {
                "group": [
                  "./model-fallback",
                  "../model-fallback",
                  "../../model-fallback"
                ],
                "message": "DO NOT BYPASS. Import from @joelclaw/model-fallback instead — heavy logic lives in standalone packages behind interfaces (ADR-0144). Fix the import, do not suppress."
              },
              {
                "group": [
                  "./message-store",
                  "../message-store",
                  "../../message-store"
                ],
                "message": "DO NOT BYPASS. Import from @joelclaw/message-store instead — heavy logic lives in standalone packages behind interfaces (ADR-0144). Fix the import, do not suppress."
              },
              {
                "group": [
                  "./vault-read",
                  "../vault-read",
                  "../../vault-read"
                ],
                "message": "DO NOT BYPASS. Import from @joelclaw/vault-reader instead — heavy logic lives in standalone packages behind interfaces (ADR-0144). Fix the import, do not suppress."
              }
            ]
          }
        }
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true,
      "cssModules": true
    }
  },
  "overrides": [
    {
      "includes": [
        "apps/web/convex/_generated/**"
      ],
      "linter": {
        "enabled": false
      },
      "assist": {
        "enabled": false
      }
    }
  ]
}
